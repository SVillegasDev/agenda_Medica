@using agendamedica.Data;
@inject DialogService DialogService

<RadzenTemplateForm TItem="AreaMedica" Data="@model" Submit=@OnSubmit>
    <div class="row" style="margin-bottom: 16px">
        <div class="col-md-3">
            <RadzenLabel Text="Area medica" />
        </div>
        <div class="col">
            <RadzenTextBox @bind-Value="@model.Nombre" Name="Nombre" />
            <RadzenRequiredValidator Text="Ingrese Area medica" Component="Nombre" />
        </div>
    </div>    
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Save" />
        </div>
    </div>
</RadzenTemplateForm>
@code {

    AreaMedica model = new AreaMedica();

    void OnSubmit(AreaMedica model)
    {
        DialogService.Close(model);
    }

}